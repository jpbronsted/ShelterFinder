<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textPrimary"
    android:orientation="vertical"
    tools:context="controllers.WelcomeActivity">

    <RelativeLayout
        android:id="@+id/tophalf"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/homef">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:gravity="center"
            android:text="Welcome to Shelter Finder"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="Time to find your safe house"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bothalf"
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnToLogin"
            android:layout_width="270dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimaryDark"
            android:outlineProvider="none"
            android:text="Log in"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnToRegister"
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btnToLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:outlineProvider="none"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>

